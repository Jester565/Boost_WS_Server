CC = g++ -std=c++0x
CC_FLAGS = -w

LIBS = -L/home/alex/Program/BB_Server/HTMLHandle/HTMLHandle/ -lhtml -L/home/alex/Program/BB_Server/BoostServerParent/BoostServerParent/ -lboostserver -lboost_system -lprotobuf
EXEC = run
SOURCES = $(wildcard *.cpp)
PROTO_SOURCES = $(shell find . -name *.pb.cc)
OBJECTS = $(SOURCES:.cpp=.o)
PROTO_OBJECTS = $(PROTO_SOURCES:.pb.cc=.o)

$(EXEC): $(OBJECTS) $(PROTO_OBJECTS)
	 $(CC) -c $(OBJECTS) $(PROTO_OBJECTS) -o $(EXEC) $(LIBS)
	 ar rcs libwsserver.a $(OBJECTS)

%.o: %.cpp
	$(CC) -c -I/home/alex/Program/BB_Server/HTMLHandle/HTMLHandle/ -I/home/alex/Program/BB_Server/BoostServerParent/BoostServerParent/ $(CC_FLAGS) $< -o $@

%.o: %.pb.cc
	$(CC) -c -I/home/alex/Program/BB_Server/HTMLHandle/HTMLHandle/ -I/home/alex/Program/BB_Server/BoostServerParent/BoostServerParent/ $(CC_FLAGS) $< -o $@

clean:
	rm -f $(EXEC) $(OBJECTS)
